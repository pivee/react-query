generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int?
  User      User?   @relation(fields: [authorId], references: [id])
}

model User {
  name  String?
  email String   @unique
  id    Int      @id @default(autoincrement())
  role  UserRole @default(USER)
  Post  Post[]
}

enum UserRole {
  USER
  MANAGER
  ADMIN
}
